{
  "public": "dist",
  "rewrites": [
    { "source": "**", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "**",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/.env",
      "destination": "/404.html",
      "type": 404
    },
    {
      "source": "/.git/**",
      "destination": "/404.html",
      "type": 404
    },
    {
      "source": "/.vscode/**",
      "destination": "/404.html",
      "type": 404
    },
    {
      "source": "/actuator/**",
      "destination": "/404.html",
      "type": 404
    }
  ]
}
